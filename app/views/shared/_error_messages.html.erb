<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-dismissable alert-danger">
        <i class="fa fa-exclamation-triangle fs-25"></i> 
        <strong> <%= t 'errors.message.sory' %> ! </strong>    
        <%= t 'errors.error', :count => object.errors.count %>.   
    </div>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li class=" alert-error" > <i class="fa fa-arrow-right fa-fw" ></i>  <%= msg.html_safe %></li>
    <% end %>
    </ul>
  </div>
<% end %>
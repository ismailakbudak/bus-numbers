

  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1 id="tables"> <%= t 'views.product.index.title' %> </h1>
        <%= link_to I18n.t('views.product.index.new_product'), new_product_path,  class: "btn btn-large btn-primary wd-15"   %>
      </div>
        <%= will_paginate %> 
          <table class="table table-striped table-hover ">
            <thead>
              <tr>
                <th>#</th>
                <th><%= Product.human_attribute_name(:name) %></th>
                <th><%= Product.human_attribute_name(:description) %></th>
                <th><%= Product.human_attribute_name(:price) %></th>
              </tr>
            </thead>
            <tbody>
            <% @products.each do |product| %>
              <tr>
                <td><%= product.id %></td> 
                <td><%= product.name %></td>
                <td><%= product.description %></td>
                <td><%= number_to_currency(product.price) %></td>
                <td><%= link_to ("<i class='fa fa-info' ></i> "    + I18n.t('views.show')).html_safe, product %></td>
                <td><%= link_to ("<i class='fa fa-pencil' ></i> "  + I18n.t('views.edit')).html_safe, edit_product_path(product) %></td>
                <td><%= link_to ("<i class='fa fa-trash-o' ></i> " + I18n.t('views.destroy')).html_safe, product, method: :delete, data: { confirm: I18n.t('views.are_you_sure') } %></td>
                
              </tr>
            <% end %>
          </tbody>
        </table>  
      <%= will_paginate %>
    </div>
  </div> 


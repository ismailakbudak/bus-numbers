<% provide(:title,  I18n.t('views.product.new.title')  ) %>

<div class="row "> 
  <div class="col-lg-3"></div>
  <div class="col-lg-6">
     <legend>  <%= t 'views.product.new.title' %>  </legend>  
     <fieldset>     
        <%= form_for(@product, :html => { class: "form-horizontal" } ) do |f| %>
            
            <%= render 'form', f: f  %>
          
            <aside class="form-group tx-center">
                 
                <%= f.submit  I18n.t('views.product.new.create'),  class: "btn btn-large btn-primary wd-15" %>
                <%= link_to I18n.t('views.back'), products_path,  class: "btn btn-large btn-primary wd-15"  %>   
            </aside>

        <% end %>

     </fieldset>     
  </div>
  <div class="col-lg-3"></div>
</div>


 
<div class="row"> 
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
    	<legend>  <%= t 'views.product.edit.title' %>  </legend>  
    	<fieldset>  
		    <%= form_for(@product, :html => { class: "form-horizontal" } ) do |f| %>
		        <%= render 'form', f: f %>  
		        <aside class="form-group">
		        	<div class="col-lg-3"></div>
		            <%= f.submit  I18n.t('views.product.edit.update'),  class: "btn btn-large btn-primary"  %>
                    <%= link_to I18n.t('views.show'), @product ,  class: "btn btn-large btn-primary"  %> 
                    <%= link_to I18n.t('views.back'), products_path,  class: "btn btn-large btn-primary"   %>
		        </aside>
		    <% end %>
		</fieldset>  
    </div>
    <div class="col-lg-3"></div>
</div>
